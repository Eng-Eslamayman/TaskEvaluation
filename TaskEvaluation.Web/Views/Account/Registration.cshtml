@model TaskEvaluation.Core.Entities.DTOs.RegisterDTO

<form method="post" asp-action="Login">
    
    <div data-mdb-input-init class="form-outline mb-4">
        <label asp-for="UserName" class="form-label" for="form2Example1">User Name</label>
        <input asp-for="UserName" type="text" id="form2Example1" class="form-control" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label asp-for="Email" class="form-label" for="form2Example1">Email address</label>
        <input asp-for="Email" type="email" id="form2Example1" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label asp-for="MobileNumber" class="form-label" for="form2Example1">Phone Number</label>
        <input asp-for="MobileNumber" type="number" id="form2Example1" class="form-control" />
        <span asp-validation-for="MobileNumber"></span>
    </div>
    
    <div data-mdb-input-init class="form-outline mb-4">
        <label asp-for="Password" class="form-label" for="form2Example2">Password</label>
        <input asp-for="Password" type="password" id="form2Example2" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <label asp-for="ConfirmPassword" class="form-label" for="form2Example2">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" id="form2Example2" class="form-control" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <!-- Submit button -->
        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Register</button>

        <!-- Login buttons -->
        <div class="text-center">
            <p>You are a member? <a asp-controller="Account" asp-action="Login">Login</a></p>
        </div>

    </div>

</form>
