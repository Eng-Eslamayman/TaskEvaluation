@model TaskEvaluation.Core.Entities.DTOs.LoginDTO

<form asp-controller="Home" asp-action="Index">
    <!-- Email input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <label asp-for="Email" class="form-label" for="form2Example1">Email address</label>
        <input asp-for="Email" type="email" id="form2Example1" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <label asp-for="Password" class="form-label" for="form2Example2">Password</label>
        <input asp-for="Password" type="password" id="form2Example2" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <label asp-for="RememberMe" class="form-check-label" for="form2Example31"> Remember me </label>
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" id="form2Example31" checked />  
            </div>
        </div>

        <!-- Submit button -->
        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Login</button>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member? <a asp-controller="Account" asp-action="Registration">Register</a></p>
        </div>

    </div>

</form>